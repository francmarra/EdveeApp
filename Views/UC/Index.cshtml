@model List<Edveeeeeee.Models.UnidadeCurricular>

<h2>Unidades Curriculares</h2>

<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Código</th>
            <th>Turmas</th>
            <th>Regime</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var uc in Model)
        {
            <tr>
                <td>@uc.Nome</td>
                <td>@uc.Codigo</td>
                <td>@uc.Turmas</td>
                <td>@uc.Regime</td>
            </tr>
        }
    </tbody>
</table>
