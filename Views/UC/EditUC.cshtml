@model Edveeeeeee.Models.UnidadeCurricular

<h2>Editar Unidade Curricular</h2>

<form asp-action="EditUC" method="post" class="uc-form">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Nome">Nome:</label>
        <input asp-for="Nome" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Codigo">Código:</label>
        <input asp-for="Codigo" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Turmas">Turmas:</label>
        <input asp-for="Turmas" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Descricao">Descrição:</label>
        <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn-detalhes">Guardar</button>
</form>

<hr />

<div id="confirm-box" style="display: none; margin-top: 15px;">
    <p style="color: #a60000; font-weight: bold;">
        Tens a certeza que queres eliminar esta unidade curricular e todos os dados associados?
    </p>
    <form asp-action="DeleteUC" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn-apagar-uc">Confirmar eliminação</button>
        <button type="button" class="btn-cancelar" onclick="document.getElementById('confirm-box').style.display='none'">Cancelar</button>
    </form>
</div>

<button onclick="document.getElementById('confirm-box').style.display='block'" class="btn-apagar-uc">
    Eliminar Unidade Curricular
</button>

<style>
    .uc-form {
        max-width: 500px;
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-detalhes {
        background-color: #5c788a;
        color: white;
        padding: 8px 14px;
        border: none;
        border-radius: 4px;
        font-weight: bold;
        margin-top: 10px;
        cursor: pointer;
    }

        .btn-detalhes:hover {
            background-color: #3c5a66;
        }

    .btn-apagar-uc {
        background-color: #8b0000;
        color: white;
        padding: 8px 14px;
        border: none;
        border-radius: 4px;
        font-weight: bold;
        margin-top: 20px;
        cursor: pointer;
    }

        .btn-apagar-uc:hover {
            background-color: #5c0000;
        }

    .btn-cancelar {
        background-color: #ccc;
        color: #333;
        padding: 8px 14px;
        border: none;
        border-radius: 4px;
        font-weight: bold;
        margin-left: 10px;
        cursor: pointer;
    }

        .btn-cancelar:hover {
            background-color: #aaa;
        }
</style>
