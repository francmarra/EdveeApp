@model Edveeeeeee.Models.ViewModels.EdVeeViewModel

<h2>EdVee: @Model.UnidadeCurricular.Nome</h2>

@if (!string.IsNullOrWhiteSpace(Model.UnidadeCurricular.Descricao))
{
    <p style="margin-top: -10px; color: #333;">
        <em>@Model.UnidadeCurricular.Descricao</em>
    </p>
}

<div class="edvee-matrix">
    <div class="edvee-row">
        <!-- Competências -->
        <div class="edvee-box">
            <h3>Competências</h3>
            <table class="edvee-table">
                <tbody>
                    @foreach (var item in Model.Competencias)
                    {
                        <tr>
                            <td>@item.Texto</td>
                            <td style="text-align:right;">
                                <a href="/UC/EditCompetencia/@item.Id" class="btn-editar-inline">Editar</a>
                                <form asp-action="DeleteCompetencia" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn-apagar-inline" onclick="return confirm('Eliminar esta competência?');">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <form asp-action="AddCompetencia" method="post">
                <input type="hidden" name="ucId" value="@Model.UnidadeCurricular.Id" />
                <input type="text" name="texto" placeholder="Nova competência..." class="form-control" />
                <button type="submit" class="btn-small">+</button>
            </form>
        </div>

        <!-- Avaliação -->
        <div class="edvee-box">
            <h3>Avaliação</h3>
            <table class="edvee-table">
                <tbody>
                    @foreach (var item in Model.Avaliacoes)
                    {
                        <tr>
                            <td>@item.Texto</td>
                            <td style="text-align:right;">
                                <a href="/UC/EditAvaliacao/@item.Id" class="btn-editar-inline">Editar</a>
                                <form asp-action="DeleteAvaliacao" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn-apagar-inline" onclick="return confirm('Eliminar esta avaliação?');">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <form asp-action="AddAvaliacao" method="post">
                <input type="hidden" name="ucId" value="@Model.UnidadeCurricular.Id" />
                <input type="text" name="texto" placeholder="Nova avaliação..." class="form-control" />
                <button type="submit" class="btn-small">+</button>
            </form>
        </div>
    </div>

    <div class="edvee-row">
        <!-- Conteúdos -->
        <div class="edvee-box">
            <h3>Conteúdos</h3>
            <table class="edvee-table">
                <tbody>
                    @foreach (var item in Model.Conteudos)
                    {
                        <tr>
                            <td>@item.Texto</td>
                            <td style="text-align:right;">
                                <a href="/UC/EditConteudo/@item.Id" class="btn-editar-inline">Editar</a>
                                <form asp-action="DeleteConteudo" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn-apagar-inline" onclick="return confirm('Eliminar este conteúdo?');">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <form asp-action="AddConteudo" method="post">
                <input type="hidden" name="ucId" value="@Model.UnidadeCurricular.Id" />
                <input type="text" name="texto" placeholder="Novo conteúdo..." class="form-control" />
                <button type="submit" class="btn-small">+</button>
            </form>
        </div>

        <!-- Atividades -->
        <div class="edvee-box">
            <h3>Atividades</h3>
            <table class="edvee-table">
                <tbody>
                    @foreach (var item in Model.Atividades)
                    {
                        <tr>
                            <td>@item.Texto</td>
                            <td style="text-align:right;">
                                <a href="/UC/EditAtividade/@item.Id" class="btn-editar-inline">Editar</a>
                                <form asp-action="DeleteAtividade" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn-apagar-inline" onclick="return confirm('Eliminar esta atividade?');">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <form asp-action="AddAtividade" method="post">
                <input type="hidden" name="ucId" value="@Model.UnidadeCurricular.Id" />
                <input type="text" name="texto" placeholder="Nova atividade..." class="form-control" />
                <button type="submit" class="btn-small">+</button>
            </form>
        </div>
    </div>
</div>

<style>
    .edvee-matrix {
        display: flex;
        flex-direction: column;
        gap: 30px;
        margin-top: 30px;
    }

    .edvee-row {
        display: flex;
        gap: 30px;
        justify-content: space-between;
    }

    .edvee-box {
        flex: 1;
        background-color: white;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
    }

        .edvee-box h3 {
            color: #a60000;
            border-bottom: 1px solid #ccc;
            padding-bottom: 5px;
            margin-top: 0;
        }

    .edvee-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 10px;
    }

        .edvee-table td {
            padding: 6px 10px;
            border-bottom: 1px solid #ccc;
            vertical-align: middle;
        }

    .btn-editar-inline,
    .btn-apagar-inline {
        background: none;
        border: none;
        color: #a60000;
        cursor: pointer;
        font-size: 14px;
        margin-left: 10px;
        text-decoration: underline;
    }

        .btn-editar-inline:hover,
        .btn-apagar-inline:hover {
            color: #800000;
        }

    .btn-small {
        background-color: #a60000;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
        margin-top: 5px;
    }

        .btn-small:hover {
            background-color: #800000;
        }
</style>
