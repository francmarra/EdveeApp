@model Edveeeeeee.Models.ViewModels.EdVeeViewModel

<h2>EdVee: @Model.UnidadeCurricular.Nome</h2>

@if (!string.IsNullOrWhiteSpace(Model.UnidadeCurricular.Descricao))
{
    <p><em>@Model.UnidadeCurricular.Descricao</em></p>
}

<div class="edvee-matrix">
    <div class="edvee-row">
        <!-- Competências -->
        <div class="edvee-box">
            <h3>Competências</h3>
            <table class="edvee-table">
                <tbody>
                    @foreach (var item in Model.Competencias)
                    {
                        <tr>
                            <td>@item.Texto</td>
                            <td style="text-align:right;">
                                <a href="/UC/EditCompetencia/@item.Id" class="btn-editar-inline">Editar</a>
                                <form asp-action="DeleteCompetencia" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn-apagar-inline">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <form asp-action="AddCompetencia" method="post">
                <input type="hidden" name="ucId" value="@Model.UnidadeCurricular.Id" />
                <input type="text" name="texto" placeholder="Nova competência..." class="form-control" />
                <button type="submit" class="btn-small">+</button>
            </form>
        </div>

        <!-- Avaliação -->
        <div class="edvee-box">
            <h3>Avaliação</h3>
            <table class="edvee-table">
                <tbody>
                    @foreach (var item in Model.Avaliacoes)
                    {
                        <tr>
                            <td>@item.Texto</td>
                            <td style="text-align:right;">
                                <a href="/UC/EditAvaliacao/@item.Id" class="btn-editar-inline">Editar</a>
                                <form asp-action="DeleteAvaliacao" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn-apagar-inline">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <form asp-action="AddAvaliacao" method="post">
                <input type="hidden" name="ucId" value="@Model.UnidadeCurricular.Id" />
                <input type="text" name="texto" placeholder="Nova avaliação..." class="form-control" />
                <button type="submit" class="btn-small">+</button>
            </form>
        </div>
    </div>

    <div class="edvee-row">
        <!-- Conteúdos -->
        <div class="edvee-box">
            <h3>Conteúdos</h3>
            <table class="edvee-table">
                <tbody>
                    @foreach (var item in Model.Conteudos)
                    {
                        <tr>
                            <td>@item.Texto</td>
                            <td style="text-align:right;">
                                <a href="/UC/EditConteudo/@item.Id" class="btn-editar-inline">Editar</a>
                                <form asp-action="DeleteConteudo" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn-apagar-inline">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <form asp-action="AddConteudo" method="post">
                <input type="hidden" name="ucId" value="@Model.UnidadeCurricular.Id" />
                <input type="text" name="texto" placeholder="Novo conteúdo..." class="form-control" />
                <button type="submit" class="btn-small">+</button>
            </form>
        </div>

        <!-- Atividades -->
        <div class="edvee-box">
            <h3>Atividades</h3>
            <table class="edvee-table">
                <tbody>
                    @foreach (var item in Model.Atividades)
                    {
                        <tr>
                            <td>@item.Texto</td>
                            <td style="text-align:right;">
                                <a href="/UC/EditAtividade/@item.Id" class="btn-editar-inline">Editar</a>
                                <form asp-action="DeleteAtividade" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn-apagar-inline">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <form asp-action="AddAtividade" method="post">
                <input type="hidden" name="ucId" value="@Model.UnidadeCurricular.Id" />
                <input type="text" name="texto" placeholder="Nova atividade..." class="form-control" />
                <button type="submit" class="btn-small">+</button>
            </form>
        </div>
    </div>
</div>

<hr />
<h3>Ligações criadas</h3>

@if (!Model.Ligacoes.Any())
{
    <p style="color: #666;">Nenhuma ligação foi criada ainda.</p>
}
else
{
    <table class="ligacoes-tabela">
        <thead>
            <tr>
                <th>Origem</th>
                <th>→</th>
                <th>Destino</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lig in Model.Ligacoes)
            {
                string origemTexto = "";
                string destinoTexto = "";

                switch (lig.OrigemTipo)
                {
                    case "Competencia":
                        origemTexto = Model.Competencias.FirstOrDefault(c => c.Id == lig.OrigemId)?.Texto ?? "??";
                        break;
                    case "Conteudo":
                        origemTexto = Model.Conteudos.FirstOrDefault(c => c.Id == lig.OrigemId)?.Texto ?? "??";
                        break;
                }

                switch (lig.DestinoTipo)
                {
                    case "Atividade":
                        destinoTexto = Model.Atividades.FirstOrDefault(a => a.Id == lig.DestinoId)?.Texto ?? "??";
                        break;
                    case "Avaliacao":
                        destinoTexto = Model.Avaliacoes.FirstOrDefault(a => a.Id == lig.DestinoId)?.Texto ?? "??";
                        break;
                }

                <tr>
                    <td>@lig.OrigemTipo: @origemTexto</td>
                    <td>→</td>
                    <td>@lig.DestinoTipo: @destinoTexto</td>
                </tr>
            }
        </tbody>
    </table>
}

<style>
    .edvee-matrix {
        display: flex;
        flex-direction: column;
        gap: 30px;
        margin-top: 30px;
    }

    .edvee-row {
        display: flex;
        gap: 30px;
        justify-content: space-between;
    }

    .edvee-box {
        flex: 1;
        background-color: white;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
    }

        .edvee-box.competencias {
            background-color: #f2d4e8;
        }

        .edvee-box.avaliacoes {
            background-color: #d8eaf7;
        }

        .edvee-box.conteudos {
            background-color: #fff3c4;
        }

        .edvee-box.atividades {
            background-color: #daf5dc;
        }

    .edvee-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 10px;
    }

        .edvee-table td {
            padding: 6px 10px;
            border-bottom: 1px solid #ccc;
            vertical-align: middle;
        }

    .form-control {
        width: calc(100% - 40px);
        padding: 6px;
        margin-top: 8px;
        margin-bottom: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-editar-inline,
    .btn-apagar-inline {
        background: none;
        border: none;
        color: #a60000;
        cursor: pointer;
        font-size: 14px;
        margin-left: 10px;
        text-decoration: underline;
    }

        .btn-editar-inline:hover,
        .btn-apagar-inline:hover {
            color: #800000;
        }

    .btn-small {
        background-color: #a60000;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
    }

        .btn-small:hover {
            background-color: #800000;
        }

    .ligacoes-tabela {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .ligacoes-tabela th,
        .ligacoes-tabela td {
            border-bottom: 1px solid #ccc;
            padding: 8px 10px;
        }
</style>
