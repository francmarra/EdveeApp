@model Edveeeeeee.Models.ViewModels.EdVeeViewModel

<h2>EdVee: @Model.UnidadeCurricular.Nome</h2>

@if (!string.IsNullOrWhiteSpace(Model.UnidadeCurricular.Descricao))
{
    <p><em>@Model.UnidadeCurricular.Descricao</em></p>
}

<!-- Connections Section Start -->
<div class="mt-4 p-3" style="background: #f8f9fa; border-radius: 10px;">
    <h4>Conexões Entre Secções</h4>
    <label>
        <input type="checkbox" id="showAll" checked /> Mostrar todas
    </label>
    <label for="connectionIndex">Escolher ligação:</label>
    <select id="connectionIndex">
        <option value="" disabled selected>Escolha uma</option>
    </select>
    <div class="connection-grid-container" style="display: flex; justify-content: space-around; align-items: flex-start; margin-top: 20px;">
        <div>
            <div class="conn-cell" id="cell-1" style="background:#d81b60;color:white;padding:10px;border-radius:4px;margin-bottom:20px;">Competências</div>
            <div class="conn-cell" id="cell-2" style="background:#fbc02d;color:white;padding:10px;border-radius:4px;">Conteúdos</div>
        </div>
        <div>
            <div class="conn-cell" id="cell-3" style="background:#1976d2;color:white;padding:10px;border-radius:4px;margin-bottom:20px;">Avaliação</div>
            <div class="conn-cell" id="cell-4" style="background:#388e3c;color:white;padding:10px;border-radius:4px;">Atividades</div>
        </div>
    </div>
</div>

<!-- LeaderLine CDN -->
<script src="https://cdn.jsdelivr.net/npm/leader-line@1.0.7/leader-line.min.js"></script>
<script>
    // Example: connection indices are arrays of pairs [from, to]
    // 1: Competências, 2: Conteúdos, 3: Avaliação, 4: Atividades
    // Example connections (customize as needed)
    const connections = [
        [[1,3], [2,4]],   // Connection 0: Competências→Avaliação, Conteúdos→Atividades
        [[1,2], [3,4]],   // Connection 1: Competências→Conteúdos, Avaliação→Atividades
        [[2,3]],          // Connection 2: Conteúdos→Avaliação
    ];
    const colors = ["#d81b60","#1976d2","#fbc02d","#388e3c","purple","orange"];
    let currentLines = [];

    function clearLines() {
        currentLines.forEach(line => line.remove());
        currentLines = [];
    }

    function drawConnection(pairs, color) {
        pairs.forEach(([from, to]) => {
            let start = document.getElementById(`cell-${from}`);
            let end = document.getElementById(`cell-${to}`);
            if (start && end) {
                let line = new LeaderLine(start, end, {
                    path: 'straight',
                    endPlug: 'disc',
                    size: 3,
                    color: color,
                    startPlugColor: color,
                    endPlugColor: color
                });
                currentLines.push(line);
            }
        });
    }

    function drawConnections() {
        clearLines();
        const showAll = document.getElementById("showAll").checked;
        const selectedIndex = document.getElementById("connectionIndex").value;

        if (showAll) {
            connections.forEach((conn, index) => {
                const color = colors[index % colors.length];
                drawConnection(conn, color);
            });
        } else if (selectedIndex !== "") {
            const index = parseInt(selectedIndex);
            if (connections[index]) {
                const color = colors[index % colors.length];
                drawConnection(connections[index], color);
            }
        }
    }

    window.addEventListener('DOMContentLoaded', () => {
        const select = document.getElementById("connectionIndex");
        connections.forEach((_, index) => {
            const option = document.createElement("option");
            option.value = index;
            option.textContent = `Ligação ${index+1}`;
            select.appendChild(option);
        });

        document.getElementById("showAll").addEventListener('change', (e) => {
            document.getElementById("connectionIndex").disabled = e.target.checked;
            drawConnections();
        });

        document.getElementById("connectionIndex").addEventListener('change', drawConnections);
        drawConnections();
    });
</script>

<div class="edvee-matrix">
    <div class="edvee-row">
        <!-- Competências -->
        <div class="edvee-box competencias">
            <h3>Competências</h3>
            <div class="edvee-table">
                @foreach (var c in Model.Competencias)
                {
                    <div class="edvee-row">
                        <div class="edvee-cell">@c.Texto</div>
                        <div class="edvee-cell actions">
                            <a href="/UC/EditCompetencia/@c.Id" class="btn-edit">Editar</a>
